<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/colorPrimary"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="首页"
            android:textColor="@color/colorWhite"
            android:textSize="30sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorWhite"
            android:orientation="vertical"
            android:padding="10dp">

            <Button
                android:id="@+id/btn_add_user"
                style="@style/main_btn"
                android:text="添加用户" />

            <Button
                android:id="@+id/btn_query_user"
                style="@style/main_btn"
                android:text="查询用户" />

            <Button
                android:id="@+id/btn_add_master"
                style="@style/main_btn"
                android:text="添加师傅" />

            <Button
                android:id="@+id/btn_query_master"
                style="@style/main_btn"
                android:text="查询师傅" />

            <Button
                android:id="@+id/btn_add_supplier"
                style="@style/main_btn"
                android:text="添加供应商" />

            <Button
                android:id="@+id/btn_query_supplier"
                style="@style/main_btn"
                android:text="查询供应商" />

            <Button
                android:id="@+id/btn_add_order"
                style="@style/main_btn"
                android:text="添加订单" />

            <Button
                android:id="@+id/btn_query_order"
                style="@style/main_btn"
                android:text="查询订单" />

            <Button
                android:id="@+id/btn_add_template"
                style="@style/main_btn"
                android:text="添加模板" />

            <Button
                android:id="@+id/btn_query_template"
                style="@style/main_btn"
                android:text="查询模板" />

            <Button
                android:id="@+id/btn_add_recommend"
                style="@style/main_btn"
                android:text="添加推荐" />

        </LinearLayout>
    </LinearLayout>
</ScrollView>
